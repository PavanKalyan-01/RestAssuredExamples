<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
    TestNG Suite Configuration
    Complete REST API Test Suite
    
    Suite Features:
    - Organized test execution
    - Parallel execution capability
    - Test grouping
    - Parameter configuration
    - Test dependencies
-->

<suite name="REST API Test Automation Suite" verbose="1" parallel="false"
	thread-count="1">

	<!-- 
        Suite Parameters
        Available to all tests in this suite
        Override from command line: mvn test -DbaseURL=https://example.com
    -->
	<parameter name="baseURL" value="https://reqres.in" />
	<parameter name="environment" value="Test" />

	<!--
        Listeners
        Add custom TestNG listeners for reporting, logging, etc.
    -->
	<listeners>
		<!-- Default HTML report -->
		<listener class-name="org.testng.reporters.EmailableReporter" />
		<!-- JUnit XML report -->
		<listener class-name="org.testng.reporters.JUnitXMLReporter" />
	</listeners>

	<!-- ========================================== -->
	<!-- TEST 1: SMOKE TEST SUITE (Quick validation) -->
	<!-- ========================================== -->
	<test name="Smoke Tests" preserve-order="true" enabled="true">
		<classes>
			<!-- Run only critical GET test -->
			<class name="com.qa.tests.GetAPITest">
				<methods>
					<include name="getUserByIdTest" />
				</methods>
			</class>
		</classes>
	</test>

	<!-- ========================================== -->
	<!-- TEST 2: GET API TESTS -->
	<!-- ========================================== -->
	<test name="GET API Tests" preserve-order="true" enabled="true">
		<classes>
			<class name="com.qa.tests.GetAPITest">
				<!-- Run all test methods in this class -->
			</class>
		</classes>
	</test>

	<!-- ========================================== -->
	<!-- TEST 3: POST API TESTS -->
	<!-- ========================================== -->
	<test name="POST API Tests" preserve-order="true" enabled="true">
		<classes>
			<class name="com.qa.tests.PostAPITest">
				<!-- All methods will run in priority order -->
			</class>
		</classes>
	</test>

	<!-- ========================================== -->
	<!-- TEST 4: PUT API TESTS -->
	<!-- ========================================== -->
	<test name="PUT API Tests" preserve-order="true" enabled="true">
		<classes>
			<class name="com.qa.tests.PutAPITest">
				<!-- Run all PUT tests -->
			</class>
		</classes>
	</test>

	<!-- ========================================== -->
	<!-- TEST 5: DELETE API TESTS -->
	<!-- ========================================== -->
	<test name="DELETE API Tests" preserve-order="true" enabled="true">
		<classes>
			<class name="com.qa.tests.DeleteAPITest">
				<!-- Run all DELETE tests -->
			</class>
		</classes>
	</test>

	<!-- ========================================== -->
	<!-- TEST 6: REGRESSION SUITE (All tests) -->
	<!-- ========================================== -->
	<test name="Full Regression Suite" preserve-order="true" enabled="false">
		<!-- enabled="false" means this won't run by default -->
		<!-- Enable from command line: mvn test -Dtest=testng.xml -->
		<classes>
			<class name="com.qa.tests.GetAPITest" />
			<class name="com.qa.tests.PostAPITest" />
			<class name="com.qa.tests.PutAPITest" />
			<class name="com.qa.tests.DeleteAPITest" />
		</classes>
	</test>

</suite>


